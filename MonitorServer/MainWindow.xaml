<Window x:Class="MonitorServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonitorServer"
        mc:Ignorable="d"
        Title="Monitor - Server" Height="250" Width="300">
    <Grid>
        <Button x:Name="btn_monitor" Content="Start" HorizontalAlignment="Left" Margin="175,125,0,0" VerticalAlignment="Top" Width="75" Click="btn_monitor_click"/>
        <ProgressBar x:Name="bar_cpu" HorizontalAlignment="Left" Height="15" Margin="70,70,0,0" VerticalAlignment="Top" Width="180"/>
        <Label x:Name="lbl_cpu" Content="0%" HorizontalAlignment="Left" Margin="70,85,0,0" VerticalAlignment="Top" Width="180"/>
        <Label Content="CPU" HorizontalAlignment="Left" Height="25" Margin="70,40,0,0" VerticalAlignment="Top" Width="180"/>

    </Grid>
</Window>
